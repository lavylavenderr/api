{
  "compilerOptions": {
    "outDir": "dist",
    "incremental": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "module": "commonjs",
    "target": "es2019",
    "strictNullChecks": false
  },
  "compileOnSave": true,
  "include": ["src"]
}
